{
    "name": "davidxu/yii2-sweetalert2-widget",
    "description": "Renders a SweetAlert2 widget for Yii2.",
    "type": "yii2-extension",
    "keywords": ["yii2","extension","widget","sweetalert2"],
    "license": "MIT",
    "authors": [
        {
            "name": "Alexey Schevchenko",
            "email": "ivanovosity@gmail.com"
        },
        {
            "name": "David Xu",
            "email": "david.xu.uts@163.com"
        }
    ],
    "require": {
        "yiisoft/yii2": "^2.0",
        "yiisoft/yii2-bootstrap4": "^2.0",
        "npm-asset/sweetalert2": "^11.4",
        "npm-asset/animate.css": "^4.1"
    },
    "require-dev": {
        "roave/security-advisories": "dev-mater",
        "phpunit/phpunit": "^6.0"
    },
    "repositories":[
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "autoload": {
        "psr-4": {
            "davidxu\\sweetalert2\\": ""
        }
    }
}
